<?xml version="1.0" encoding="UTF-8"?>
<manifest>
  <![CDATA[
    Manifest for building NDK Vulkan validation layer binaries from master.

    Uses prebuilt python.

    To build this project, run external/vulkan-validation-layers/build-android/build.py --installdir $DIST_DIR.

    Then executables are in:
          $DIST_DIR/vulkan-validation-layers/

   For testing, use:
           fetch="https://android.googlesource.com/"
  ]]>


  <remote  name="aosp"
           fetch=".."
           review="https://android-review.googlesource.com/" />
  <default revision="master"
           remote="aosp"
           sync-j="4" />

  <project path="external/vulkan-validation-layers" name="platform/external/vulkan-validation-layers" groups="presubmit" />
  <project path="external/vulkan-headers" name="platform/external/vulkan-headers" groups="presubmit" />
  <project path="external/shaderc/glslang" name="platform/external/shaderc/glslang" groups="presubmit" revision="master-ndk" />
  <project path="external/shaderc/shaderc" name="platform/external/shaderc/shaderc" groups="presubmit" revision="master-ndk" />
  <project path="external/shaderc/spirv-headers" name="platform/external/shaderc/spirv-headers" groups="presubmit" revision="master-ndk" />
  <project path="external/shaderc/spirv-tools" name="platform/external/shaderc/spirv-tools" groups="presubmit" revision="master-ndk" />
  <project path="prebuilts/toolchain" name="toolchain/prebuilts/ndk/r15" groups="presubmit" />

</manifest>
